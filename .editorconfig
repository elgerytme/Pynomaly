# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# Configuration files
[*.{toml,ini,cfg}]
indent_size = 4

# Shell scripts
[*.{sh,bash}]
indent_size = 2

# Makefile
[Makefile]
indent_style = tab
indent_size = 4

# Docker files
[Dockerfile*]
indent_size = 2

# TypeScript/JavaScript files
[*.{ts,js,tsx,jsx}]
indent_size = 2
max_line_length = 100

# CSS/SCSS files
[*.{css,scss,sass}]
indent_size = 2

# HTML files
[*.html]
indent_size = 2

# XML files
[*.xml]
indent_size = 2

# SQL files
[*.sql]
indent_size = 2

# Requirements files
[requirements*.txt]
indent_size = 4

# Git commit messages
[COMMIT_EDITMSG]
max_line_length = 72

# GitHub workflow files
[.github/workflows/*.yml]
indent_size = 2

# BUCK files
[BUCK]
indent_size = 4

# GitHub templates
[.github/**]
indent_size = 2