#!/bin/bash
# Pre-push hook for Pynomaly project
# - Runs unit tests

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${GREEN}🔍 Running pre-push checks...${NC}"

# 1. Run unit tests
echo -e "${YELLOW}🧪 Running unit tests...${NC}"
if hatch env run test:run tests/domain/ tests/application/ -v; then
    echo -e "${GREEN}✅ Unit tests passed${NC}"
else
    echo -e "${RED}❌ Unit tests failed${NC}"
    exit 1
fi

