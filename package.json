{
  "name": "pynomaly-web-ui",
  "version": "0.8.0",
  "description": "Pynomaly Web UI - Production-ready Progressive Web App for anomaly detection",
  "main": "src/pynomaly/presentation/web/static/js/main.js",
  "scripts": {
    "dev": "concurrently \"npm run watch-css\" \"npm run watch-js\"",
    "dev:storybook": "concurrently \"npm run watch-css\" \"npm run storybook\"",
    "build": "npm run build-css && npm run build-js:optimized",
    "build-css": "tailwindcss -i src/pynomaly/presentation/web/static/css/input.css -o src/pynomaly/presentation/web/static/css/output.css --minify",
    "watch-css": "tailwindcss -i src/pynomaly/presentation/web/static/css/input.css -o src/pynomaly/presentation/web/static/css/output.css --watch",
    "build-js": "esbuild src/pynomaly/presentation/web/static/js/src/**/*.js --bundle --minify --outdir=src/pynomaly/presentation/web/static/js/dist --target=es2020",
    "build-js:optimized": "node config/build/esbuild.config.js build",
    "build-js:analyze": "node config/build/esbuild.config.js analyze",
    "watch-js": "node config/build/esbuild.config.js watch",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "storybook:serve": "npx http-server storybook-static -p 6007",
    "storybook:test": "test-storybook",
    "storybook:coverage": "test-storybook --coverage",
    "storybook:visual": "percy storybook http://localhost:6006",
    "test-ui": "playwright test",
    "test-ui-headed": "playwright test --headed",
    "test-ui-debug": "playwright test --debug",
    "lint-js": "eslint src/pynomaly/presentation/web/static/js/src/**/*.js",
    "lint-css": "stylelint src/pynomaly/presentation/web/static/css/**/*.css",
    "format": "prettier --write \"src/pynomaly/presentation/web/**/*.{js,css,html}\"",
    "lighthouse": "lhci autorun",
    "test:lighthouse": "lhci autorun",
    "test:performance": "node scripts/performance/web-performance-monitor.js",
    "test:performance:regression": "node scripts/performance-regression-detector.js",
    "test:performance:full": "npm run build && node scripts/performance/web-performance-monitor.js",
    "lighthouse:collect": "lhci collect --url=http://localhost:8000",
    "lighthouse:assert": "lhci assert",
    "lighthouse:upload": "lhci upload",
    "perf:audit": "lighthouse http://localhost:8000 --output=html --output-path=test_reports/lighthouse.html",
    "test:cross-browser": "playwright test --project=chromium --project=firefox --project=webkit",
    "test:mobile": "playwright test --project=\"Mobile Chrome\" --project=\"Mobile Safari\"",
    "test:desktop": "playwright test --project=\"Desktop Chrome\" --project=\"Desktop Firefox\" --project=\"Desktop Safari\"",
    "test:responsive": "playwright test tests/ui/responsive/",
    "test:touch": "playwright test tests/ui/mobile/ tests/ui/touch/",
    "test:device-compatibility": "playwright test --project=\"Mobile Chrome\" --project=\"Mobile Safari\" --project=\"iPad\" --project=\"Android Tablet\"",
    "test:browser-matrix": "node scripts/browser-compatibility-matrix.js",
    "test:accessibility": "playwright test tests/ui/test_accessibility_enhanced.spec.ts",
    "test:visual": "percy exec -- playwright test",
    "test:visual:storybook": "percy storybook http://localhost:6006",
    "test:dashboard": "playwright test tests/ui/dashboard/",
    "test:dashboard:advanced": "playwright test tests/ui/dashboard/advanced/",
    "test:drag-drop": "playwright test tests/ui/interactions/drag-drop.spec.ts",
    "test:real-time": "playwright test tests/ui/real-time/",
    "analyze-bundle": "node scripts/analysis/bundle-analyzer.js",
    "analyze-bundle-webpack": "npx webpack-bundle-analyzer storybook-static/static/js/*.js",
    "accessibility-audit": "axe-crawler http://localhost:6006",
    "serve-static": "http-server src/pynomaly/presentation/web/static -p 8080 -c-1"
  },
  "keywords": [
    "anomaly-detection",
    "machine-learning",
    "progressive-web-app",
    "tailwindcss",
    "htmx",
    "d3js",
    "echarts",
    "accessibility",
    "performance"
  ],
  "author": "Pynomaly Team",
  "license": "MIT",
  "dependencies": {
    "alpinejs": "^3.13.5",
    "d3": "^7.8.5",
    "echarts": "^5.4.3",
    "fuse.js": "^7.0.0",
    "htmx.org": "^1.9.10",
    "sortablejs": "^1.15.0"
  },
  "devDependencies": {
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.53.2",
    "@storybook/addon-a11y": "^8.0.0",
    "@storybook/addon-backgrounds": "^8.0.0",
    "@storybook/addon-controls": "^8.0.0",
    "@storybook/addon-docs": "^8.0.0",
    "@storybook/addon-essentials": "^8.0.0",
    "@storybook/addon-interactions": "^8.0.0",
    "@storybook/addon-measure": "^8.0.0",
    "@storybook/addon-outline": "^8.0.0",
    "@storybook/addon-toolbars": "^8.0.0",
    "@storybook/addon-viewport": "^8.0.0",
    "@storybook/html": "^8.0.0",
    "@storybook/html-vite": "^8.0.0",
    "@storybook/testing-library": "^0.2.2",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.16",
    "axe-core": "^4.8.4",
    "axe-crawler": "^0.5.5",
    "chrome-launcher": "^1.1.2",
    "concurrently": "^8.2.2",
    "esbuild": "^0.25.6",
    "eslint": "^8.56.0",
    "http-server": "^14.1.1",
    "lighthouse": "^12.7.1",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "puppeteer": "^24.10.2",
    "storybook": "^8.0.0",
    "stylelint": "^16.1.0",
    "tailwindcss": "^3.4.0",
    "vite": "^7.0.3",
    "web-vitals": "^5.0.3",
    "workbox-cli": "^7.0.0"
  },
  "browserslist": [
    "defaults",
    "not IE 11",
    "not dead",
    "> 0.5%",
    "last 2 versions"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
