{
  "name": "pynomaly-web-ui",
  "version": "0.8.0",
  "description": "Pynomaly Web UI - Production-ready Progressive Web App for anomaly detection",
  "main": "src/pynomaly/presentation/web/static/js/main.js",
  "scripts": {
    "dev": "concurrently \"npm run watch-css\" \"npm run watch-js\"",
    "build": "npm run build-css && npm run build-js",
    "build-css": "tailwindcss -i src/pynomaly/presentation/web/static/css/input.css -o src/pynomaly/presentation/web/static/css/output.css --minify",
    "watch-css": "tailwindcss -i src/pynomaly/presentation/web/static/css/input.css -o src/pynomaly/presentation/web/static/css/output.css --watch",
    "build-js": "esbuild src/pynomaly/presentation/web/static/js/src/**/*.js --bundle --minify --outdir=src/pynomaly/presentation/web/static/js/dist --target=es2020",
    "watch-js": "esbuild src/pynomaly/presentation/web/static/js/src/**/*.js --bundle --outdir=src/pynomaly/presentation/web/static/js/dist --target=es2020 --watch",
    "test-ui": "playwright test",
    "test-ui-headed": "playwright test --headed",
    "test-ui-debug": "playwright test --debug",
    "lint-js": "eslint src/pynomaly/presentation/web/static/js/src/**/*.js",
    "lint-css": "stylelint src/pynomaly/presentation/web/static/css/**/*.css",
    "format": "prettier --write \"src/pynomaly/presentation/web/**/*.{js,css,html}\"",
    "lighthouse": "lhci autorun",
    "test:lighthouse": "lhci autorun",
    "test:performance": "lhci collect && lhci assert",
    "lighthouse:collect": "lhci collect --url=http://localhost:8000",
    "lighthouse:assert": "lhci assert",
    "lighthouse:upload": "lhci upload",
    "perf:audit": "lighthouse http://localhost:8000 --output=html --output-path=test_reports/lighthouse.html",
    "test:cross-browser": "playwright test --project=chromium --project=firefox --project=webkit",
    "test:accessibility": "playwright test tests/ui/test_accessibility_enhanced.spec.ts",
    "test:visual": "percy exec -- playwright test",
    "serve-static": "http-server src/pynomaly/presentation/web/static -p 8080 -c-1"
  },
  "keywords": [
    "anomaly-detection",
    "machine-learning",
    "progressive-web-app",
    "tailwindcss",
    "htmx",
    "d3js",
    "echarts",
    "accessibility",
    "performance"
  ],
  "author": "Pynomaly Team",
  "license": "MIT",
  "dependencies": {
    "alpinejs": "^3.13.5",
    "d3": "^7.8.5",
    "echarts": "^5.4.3",
    "fuse.js": "^7.0.0",
    "htmx.org": "^1.9.10",
    "sortablejs": "^1.15.0"
  },
  "devDependencies": {
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.40.1",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "esbuild": "^0.19.11",
    "eslint": "^8.56.0",
    "http-server": "^14.1.1",
    "lighthouse": "^11.4.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "puppeteer": "^24.10.2",
    "stylelint": "^16.1.0",
    "tailwindcss": "^3.4.0",
    "web-vitals": "^5.0.3",
    "workbox-cli": "^7.0.0"
  },
  "browserslist": [
    "defaults",
    "not IE 11",
    "not dead",
    "> 0.5%",
    "last 2 versions"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
