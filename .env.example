# Pynomaly Environment Configuration

# Environment
PYNOMALY_ENVIRONMENT=development
PYNOMALY_DEBUG=true

# API Configuration
PYNOMALY_API_HOST=0.0.0.0
PYNOMALY_API_PORT=8000
PYNOMALY_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Storage Paths
PYNOMALY_STORAGE_PATH=./storage
PYNOMALY_LOG_PATH=./logs
PYNOMALY_TEMP_PATH=./temp
PYNOMALY_MODEL_PATH=./models

# Database (optional)
DATABASE_URL=postgresql://pynomaly:pynomaly_secret@localhost:5432/pynomaly

# Redis (optional)
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production

# Performance
PYNOMALY_MAX_WORKERS=4
PYNOMALY_BATCH_SIZE=1000
PYNOMALY_CACHE_TTL_SECONDS=300
PYNOMALY_GPU_ENABLED=false

# Data Limits
PYNOMALY_MAX_DATASET_SIZE_MB=1000
PYNOMALY_DEFAULT_CONTAMINATION_RATE=0.1

# Monitoring
PYNOMALY_METRICS_ENABLED=true
PYNOMALY_RATE_LIMIT_REQUESTS=100

# Logging
PYNOMALY_LOG_LEVEL=INFO
PYNOMALY_LOG_FORMAT=json

# ML Backends (optional)
ENABLE_PYTORCH=false
ENABLE_TENSORFLOW=false
ENABLE_JAX=false