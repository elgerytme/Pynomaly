# Pynomaly Environment Variables Example

# Database Configuration
PYNOMALY_DATABASE_DATABASE_URL=postgresql://pynomaly:pynomaly@db:5432/pynomaly
PYNOMALY_DATABASE_USE_DATABASE_REPOSITORIES=true
PYNOMALY_DATABASE_DATABASE_POOL_SIZE=10
PYNOMALY_DATABASE_DATABASE_MAX_OVERFLOW=20

# Redis Cache Configuration
PYNOMALY_STORAGE_REDIS_URL=redis://redis:6379/0
PYNOMALY_STORAGE_CACHE_TTL=3600

# Security / Authentication
PYNOMALY_SECURITY_SECRET_KEY=your-secret-key
PYNOMALY_SECURITY_AUTH_ENABLED=true

# API Settings
PYNOMALY_API_DOCS_ENABLED=true

# Monitoring
PYNOMALY_MONITORING_PROMETHEUS_ENABLED=false

# Application Settings
PYNOMALY_APP_DEBUG=true
PYNOMALY_APP_NAME=Pynomaly
PYNOMALY_APP_VERSION=1.0.0