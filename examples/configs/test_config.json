{
  "metadata": {
    "type": "test",
    "created": "2025-06-24T17:12:43.910803",
    "version": "1.0",
    "description": "Pynomaly test configuration"
  },
  "test": {
    "detector": {
      "algorithm": "IsolationForest",
      "parameters": {
        "contamination": 0.05,
        "random_state": 42
      }
    },
    "dataset": {
      "source": "data/test_dataset.csv",
      "validation": {
        "enabled": true,
        "checks": [
          "missing_values",
          "data_types",
          "duplicates"
        ]
      }
    },
    "training": {
      "validate_data": true,
      "save_model": true
    },
    "detection": {
      "validate_features": true,
      "save_results": true,
      "export": {
        "enabled": true,
        "format": "csv",
        "path": "test_results.csv"
      }
    },
    "evaluation": {
      "cross_validation": true,
      "folds": 5,
      "metrics": [
        "precision",
        "recall",
        "f1",
        "auc_roc",
        "auc_pr"
      ]
    }
  },
  "examples": {
    "usage": [
      "pynomaly detector create --name test_detector --algorithm IsolationForest",
      "pynomaly dataset load path/to/test_data.csv --name test_data",
      "pynomaly detect train test_detector test_data",
      "pynomaly detect run test_detector test_data --output results.csv",
      "pynomaly detect evaluate test_detector test_data --cv --folds 5"
    ],
    "description": "Basic testing workflow with single detector"
  }
}
