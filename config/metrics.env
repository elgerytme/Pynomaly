# Prometheus Metrics Configuration

# Enable/disable metrics collection
PROM_METRICS_ENABLED=true

# Metrics ports for different services
PROM_API_PORT=9090
PROM_TRAINING_WORKER_PORT=9092
PROM_STREAMING_WORKER_PORT=9091

# Metrics namespace
PROM_NAMESPACE=pynomaly

# Metrics collection intervals
PROM_SCRAPE_INTERVAL=15s
PROM_SCRAPE_TIMEOUT=5s

# Advanced configuration
PROM_ENABLE_DEFAULT_METRICS=true
PROM_HISTOGRAM_BUCKETS=0.001,0.01,0.1,0.5,1.0,2.5,5.0,10.0

# System metrics
PROM_COLLECT_SYSTEM_METRICS=true
PROM_SYSTEM_METRICS_INTERVAL=30s

# Application metrics
PROM_COLLECT_HTTP_METRICS=true
PROM_COLLECT_DETECTION_METRICS=true
PROM_COLLECT_TRAINING_METRICS=true
PROM_COLLECT_STREAMING_METRICS=true

# Worker configuration
WORKER_MAX_TASKS=4
WORKER_METRICS_UPDATE_INTERVAL=30s

# Logging
PROM_LOG_LEVEL=INFO
