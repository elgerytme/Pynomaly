{
  "enabled": true,
  "strict_mode": false,
  "auto_validation": true,
  "min_test_coverage": 0.85,
  "coverage_fail_under": 0.7,
  "branch_coverage_required": true,
  "test_file_patterns": [
    "test_*.py",
    "*_test.py",
    "tests/*.py"
  ],
  "implementation_patterns": [
    "*.py"
  ],
  "exemption_patterns": [
    "__init__.py",
    "setup.py",
    "conftest.py",
    "migrations/*"
  ],
  "enforce_on_modules": [],
  "enforce_on_packages": [
    "src/pynomaly/domain",
    "src/pynomaly/application"
  ],
  "test_naming_convention": "test_{function_name}",
  "test_class_naming_convention": "Test{ClassName}",
  "require_test_docstrings": true,
  "git_hooks_enabled": true,
  "pre_commit_validation": true,
  "pre_push_validation": false,
  "ci_validation_enabled": true,
  "fail_on_violations": false,
  "generate_compliance_reports": true,
  "report_output_path": "./reports/tdd",
  "metrics_retention_days": 90,
  "allow_implementation_first": false,
  "grace_period_hours": 24,
  "require_test_plan": true,
  "mutation_testing_enabled": false,
  "property_testing_enabled": false,
  "integration_test_ratio": 0.2
}
