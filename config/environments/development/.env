# Development Environment Configuration
# This file contains development-specific environment variables

# Environment identification
PYNOMALY_ENV=development
PYNOMALY_DEBUG=true
PYNOMALY_LOG_LEVEL=DEBUG

# Database configuration
PYNOMALY_DATABASE_URL=sqlite:///./pynomaly_dev.db
PYNOMALY_DATABASE_ECHO=true

# Redis configuration (for development)
PYNOMALY_REDIS_URL=redis://localhost:6379/0
PYNOMALY_CACHE_TTL=300

# API configuration
PYNOMALY_API_HOST=0.0.0.0
PYNOMALY_API_PORT=8000
PYNOMALY_API_RELOAD=true
PYNOMALY_API_WORKERS=1

# Authentication (development defaults)
PYNOMALY_SECRET_KEY=dev-secret-key-change-in-production
PYNOMALY_ACCESS_TOKEN_EXPIRE_MINUTES=30
PYNOMALY_REFRESH_TOKEN_EXPIRE_DAYS=7

# Feature flags
PYNOMALY_ENABLE_MONITORING=false
PYNOMALY_ENABLE_DOCS=true
PYNOMALY_ENABLE_CORS=true
PYNOMALY_ENABLE_AUTH=false

# MLOps and training
PYNOMALY_MLFLOW_TRACKING_URI=file:///tmp/mlflow
PYNOMALY_MODEL_STORAGE_PATH=./models/dev
PYNOMALY_EXPERIMENT_TRACKING=true

# Performance settings
PYNOMALY_ASYNC_MODE=true
PYNOMALY_MAX_WORKERS=4
PYNOMALY_BATCH_SIZE=1000

# Development-specific settings
PYNOMALY_ENABLE_PROFILING=true
PYNOMALY_ENABLE_HOT_RELOAD=true
PYNOMALY_ENABLE_DEBUG_TOOLBAR=true