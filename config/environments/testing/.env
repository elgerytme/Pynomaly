# Testing Environment Configuration
# This file is used by automated tests

# Environment identification
PYNOMALY_ENV=testing
PYNOMALY_DEBUG=false
PYNOMALY_LOG_LEVEL=WARNING

# Database configuration (in-memory for tests)
PYNOMALY_DATABASE_URL=sqlite:///:memory:
PYNOMALY_DATABASE_ECHO=false

# Redis configuration (fake Redis for tests)
PYNOMALY_REDIS_URL=redis://localhost:6379/15
PYNOMALY_CACHE_TTL=1

# API configuration
PYNOMALY_API_HOST=127.0.0.1
PYNOMALY_API_PORT=0  # Auto-assign port for tests
PYNOMALY_API_RELOAD=false
PYNOMALY_API_WORKERS=1

# Authentication (testing defaults)
PYNOMALY_SECRET_KEY=test-secret-key-insecure
PYNOMALY_ACCESS_TOKEN_EXPIRE_MINUTES=5
PYNOMALY_REFRESH_TOKEN_EXPIRE_DAYS=1

# Feature flags (optimized for testing)
PYNOMALY_ENABLE_MONITORING=false
PYNOMALY_ENABLE_DOCS=false
PYNOMALY_ENABLE_CORS=true
PYNOMALY_ENABLE_AUTH=false

# MLOps and training (testing mode)
PYNOMALY_MLFLOW_TRACKING_URI=file:///tmp/test_mlflow
PYNOMALY_MODEL_STORAGE_PATH=/tmp/test_models
PYNOMALY_EXPERIMENT_TRACKING=false

# Performance settings (minimal for tests)
PYNOMALY_ASYNC_MODE=true
PYNOMALY_MAX_WORKERS=1
PYNOMALY_BATCH_SIZE=10

# Testing-specific settings
PYNOMALY_ENABLE_PROFILING=false
PYNOMALY_ENABLE_HOT_RELOAD=false
PYNOMALY_ENABLE_DEBUG_TOOLBAR=false
PYNOMALY_TEST_TIMEOUT=30
PYNOMALY_SKIP_SLOW_TESTS=true