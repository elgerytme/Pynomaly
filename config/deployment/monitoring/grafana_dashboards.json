{
  "dashboard": {
    "id": null,
    "title": "Pynomaly Production Monitoring",
    "tags": ["pynomaly", "production", "monitoring"],
    "timezone": "UTC",
    "panels": [
      {
        "id": 1,
        "title": "System Health Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "pynomaly_system_health_score",
            "legendFormat": "Health Score"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "textMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [],
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 0.7},
                {"color": "green", "value": 0.9}
              ]
            },
            "unit": "percentunit"
          }
        }
      },
      {
        "id": 2,
        "title": "Detection Performance",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(pynomaly_detections_total[5m])",
            "legendFormat": "Detection Rate"
          },
          {
            "expr": "histogram_quantile(0.95, rate(pynomaly_detection_duration_seconds_bucket[5m]))",
            "legendFormat": "95th Percentile Latency"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 6, "y": 0},
        "options": {
          "tooltip": {"mode": "single", "sort": "none"},
          "legend": {"displayMode": "visible", "placement": "bottom"},
          "displayMode": "list"
        }
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(pynomaly_errors_total[5m])",
            "legendFormat": "Error Rate"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 4},
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "textMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [],
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 0.01},
                {"color": "red", "value": 0.05}
              ]
            },
            "unit": "percentunit"
          }
        }
      },
      {
        "id": 4,
        "title": "Model Performance Metrics",
        "type": "timeseries",
        "targets": [
          {
            "expr": "pynomaly_model_accuracy",
            "legendFormat": "Accuracy - {{model_name}}"
          },
          {
            "expr": "pynomaly_model_precision",
            "legendFormat": "Precision - {{model_name}}"
          },
          {
            "expr": "pynomaly_model_recall",
            "legendFormat": "Recall - {{model_name}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 6, "y": 8},
        "options": {
          "tooltip": {"mode": "multi", "sort": "none"},
          "legend": {"displayMode": "visible", "placement": "bottom"},
          "displayMode": "list"
        }
      },
      {
        "id": 5,
        "title": "Resource Usage",
        "type": "timeseries",
        "targets": [
          {
            "expr": "pynomaly_cpu_usage_percent",
            "legendFormat": "CPU Usage"
          },
          {
            "expr": "pynomaly_memory_usage_percent",
            "legendFormat": "Memory Usage"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "options": {
          "tooltip": {"mode": "multi", "sort": "none"},
          "legend": {"displayMode": "visible", "placement": "bottom"},
          "displayMode": "list"
        }
      },
      {
        "id": 6,
        "title": "Active Anomalies",
        "type": "stat",
        "targets": [
          {
            "expr": "pynomaly_active_anomalies",
            "legendFormat": "Active Anomalies"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "textMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [],
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 10},
                {"color": "red", "value": 50}
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 7,
        "title": "Data Quality Score",
        "type": "gauge",
        "targets": [
          {
            "expr": "pynomaly_data_quality_score",
            "legendFormat": "Data Quality"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 4},
        "options": {
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [],
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 0.7},
                {"color": "green", "value": 0.9}
              ]
            },
            "unit": "percentunit",
            "min": 0,
            "max": 1
          }
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {},
    "templating": {
      "list": [
        {
          "name": "instance",
          "type": "query",
          "query": "label_values(pynomaly_system_health_score, instance)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "prometheus",
          "expr": "pynomaly_deployment_event",
          "iconColor": "blue"
        }
      ]
    },
    "refresh": "30s",
    "schemaVersion": 27,
    "version": 1
  }
}
