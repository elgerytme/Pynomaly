{
  "monitoring_interval": 30,
  "metrics_retention_hours": 24,
  "max_buffer_size": 10000,
  "alert_handlers": {
    "console": {
      "enabled": true
    },
    "email": {
      "enabled": false,
      "smtp_server": "smtp.gmail.com",
      "smtp_port": 587,
      "smtp_username": "",
      "smtp_password": "",
      "from_email": "",
      "to_emails": []
    },
    "slack": {
      "enabled": false,
      "webhook_url": "",
      "channel": "#alerts"
    },
    "discord": {
      "enabled": false,
      "webhook_url": ""
    },
    "webhook": {
      "enabled": false,
      "url": "",
      "headers": {
        "Content-Type": "application/json"
      },
      "auth": {
        "type": "bearer",
        "token": ""
      }
    },
    "file": {
      "enabled": true,
      "log_file": "logs/performance_alerts.log",
      "max_file_size": 10000000
    },
    "database": {
      "enabled": false,
      "url": ""
    }
  },
  "thresholds": [
    {
      "metric_type": "response_time",
      "warning_threshold": 1000,
      "critical_threshold": 3000,
      "evaluation_window": 300,
      "minimum_samples": 10,
      "comparison_operator": "gt",
      "enabled": true,
      "tags_filter": {}
    },
    {
      "metric_type": "error_rate",
      "warning_threshold": 0.05,
      "critical_threshold": 0.10,
      "evaluation_window": 300,
      "minimum_samples": 10,
      "comparison_operator": "gt",
      "enabled": true,
      "tags_filter": {}
    },
    {
      "metric_type": "memory_usage",
      "warning_threshold": 0.80,
      "critical_threshold": 0.90,
      "evaluation_window": 300,
      "minimum_samples": 5,
      "comparison_operator": "gt",
      "enabled": true,
      "tags_filter": {}
    },
    {
      "metric_type": "cpu_usage",
      "warning_threshold": 0.80,
      "critical_threshold": 0.90,
      "evaluation_window": 300,
      "minimum_samples": 5,
      "comparison_operator": "gt",
      "enabled": true,
      "tags_filter": {}
    },
    {
      "metric_type": "core_web_vital",
      "warning_threshold": 2500,
      "critical_threshold": 4000,
      "evaluation_window": 300,
      "minimum_samples": 5,
      "comparison_operator": "gt",
      "enabled": true,
      "tags_filter": {"vital": "LCP"}
    },
    {
      "metric_type": "core_web_vital",
      "warning_threshold": 100,
      "critical_threshold": 300,
      "evaluation_window": 300,
      "minimum_samples": 5,
      "comparison_operator": "gt",
      "enabled": true,
      "tags_filter": {"vital": "FID"}
    },
    {
      "metric_type": "core_web_vital",
      "warning_threshold": 0.1,
      "critical_threshold": 0.25,
      "evaluation_window": 300,
      "minimum_samples": 5,
      "comparison_operator": "gt",
      "enabled": true,
      "tags_filter": {"vital": "CLS"}
    },
    {
      "metric_type": "core_web_vital",
      "warning_threshold": 1800,
      "critical_threshold": 3000,
      "evaluation_window": 300,
      "minimum_samples": 5,
      "comparison_operator": "gt",
      "enabled": true,
      "tags_filter": {"vital": "FCP"}
    },
    {
      "metric_type": "core_web_vital",
      "warning_threshold": 800,
      "critical_threshold": 1800,
      "evaluation_window": 300,
      "minimum_samples": 5,
      "comparison_operator": "gt",
      "enabled": true,
      "tags_filter": {"vital": "TTFB"}
    },
    {
      "metric_type": "api_latency",
      "warning_threshold": 500,
      "critical_threshold": 1000,
      "evaluation_window": 300,
      "minimum_samples": 10,
      "comparison_operator": "gt",
      "enabled": true,
      "tags_filter": {}
    },
    {
      "metric_type": "database_performance",
      "warning_threshold": 200,
      "critical_threshold": 500,
      "evaluation_window": 300,
      "minimum_samples": 10,
      "comparison_operator": "gt",
      "enabled": true,
      "tags_filter": {}
    },
    {
      "metric_type": "throughput",
      "warning_threshold": 10,
      "critical_threshold": 5,
      "evaluation_window": 300,
      "minimum_samples": 5,
      "comparison_operator": "lt",
      "enabled": true,
      "tags_filter": {}
    }
  ]
}
