# Dockerfile for Locust load testing
FROM python:3.11-slim

# Set labels
LABEL maintainer="Pynomaly Team <team@pynomaly.com>"
LABEL description="Locust load testing container for Pynomaly"

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /locust

# Copy requirements and install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application files
COPY locustfile.py .
COPY config/ ./config/
COPY scripts/ ./scripts/

# Create directories
RUN mkdir -p /locust/reports /locust/data /locust/logs

# Set environment variables
ENV PYTHONPATH=/locust
ENV LOCUST_MODE=standalone
ENV LOCUST_HOST=http://localhost:8000
ENV LOCUST_LOGLEVEL=INFO
ENV LOCUST_LOGFILE=/locust/logs/locust.log

# Expose ports
EXPOSE 8089 5557

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8089/stats/requests || exit 1

# Default command
CMD ["locust", "--host", "http://localhost:8000", "--loglevel", "INFO"]
