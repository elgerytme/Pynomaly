{
  "dashboard": {
    "id": null,
    "title": "Pynomaly - Platform Overview",
    "tags": ["pynomaly", "overview"],
    "style": "dark",
    "timezone": "browser",
    "editable": true,
    "graphTooltip": 1,
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h"],
      "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
    },
    "refresh": "30s",
    "schemaVersion": 30,
    "version": 1,
    "panels": [
      {
        "id": 1,
        "title": "System Status",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "up{job=\"pynomaly-api\"}",
            "legendFormat": "API Status",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "mappings": [
              {"options": {"0": {"color": "red", "text": "DOWN"}}, "type": "value"},
              {"options": {"1": {"color": "green", "text": "UP"}}, "type": "value"}
            ],
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "options": {
          "reduceOptions": {"values": false, "calcs": ["lastNotNull"], "fields": ""},
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "background"
        }
      },
      {
        "id": 2,
        "title": "Active Models",
        "type": "stat",
        "gridPos": {"h": 4, "w": 3, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "pynomaly_active_models",
            "legendFormat": "Models",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "short"
          }
        }
      },
      {
        "id": 3,
        "title": "Active Streams",
        "type": "stat",
        "gridPos": {"h": 4, "w": 3, "x": 9, "y": 0},
        "targets": [
          {
            "expr": "pynomaly_active_streams",
            "legendFormat": "Streams",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "short"
          }
        }
      },
      {
        "id": 4,
        "title": "Request Rate",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "rate(pynomaly_http_requests_total[5m])",
            "legendFormat": "req/sec",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "reqps"
          }
        }
      },
      {
        "id": 5,
        "title": "Error Rate",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "rate(pynomaly_http_requests_total{status=~\"5..\"}[5m]) / rate(pynomaly_http_requests_total[5m]) * 100",
            "legendFormat": "Error %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "unit": "percent",
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "title": "API Request Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "rate(pynomaly_http_requests_total[5m])",
            "legendFormat": "{{method}} {{endpoint}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {"label": "requests/sec", "min": 0},
          {"show": false}
        ],
        "xAxis": {"show": true},
        "legend": {"show": true, "alignAsTable": true, "rightSide": false}
      },
      {
        "id": 7,
        "title": "Response Time",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(pynomaly_http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(pynomaly_http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(pynomaly_http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ],
        "yAxes": [
          {"label": "seconds", "min": 0},
          {"show": false}
        ]
      },
      {
        "id": 8,
        "title": "Detection Performance",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "rate(pynomaly_detections_total[5m])",
            "legendFormat": "{{algorithm}} - {{status}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {"label": "detections/sec", "min": 0},
          {"show": false}
        ]
      },
      {
        "id": 9,
        "title": "Training Jobs",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "rate(pynomaly_training_requests_total[5m])",
            "legendFormat": "{{algorithm}} - {{status}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {"label": "jobs/sec", "min": 0},
          {"show": false}
        ]
      },
      {
        "id": 10,
        "title": "Memory Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "pynomaly_memory_usage_bytes / 1024 / 1024 / 1024",
            "legendFormat": "{{component}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {"label": "GB", "min": 0},
          {"show": false}
        ]
      },
      {
        "id": 11,
        "title": "CPU Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
        "targets": [
          {
            "expr": "pynomaly_cpu_usage_ratio * 100",
            "legendFormat": "{{component}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {"label": "percent", "min": 0, "max": 100},
          {"show": false}
        ]
      },
      {
        "id": 12,
        "title": "Cache Performance",
        "type": "graph",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 28},
        "targets": [
          {
            "expr": "pynomaly_cache_hit_ratio * 100",
            "legendFormat": "Hit Ratio - {{cache_type}}",
            "refId": "A"
          },
          {
            "expr": "pynomaly_cache_size_items",
            "legendFormat": "Size - {{cache_type}}",
            "refId": "B",
            "yAxis": 2
          }
        ],
        "yAxes": [
          {"label": "hit ratio %", "min": 0, "max": 100},
          {"label": "items", "min": 0, "show": true}
        ]
      }
    ],
    "templating": {
      "list": [
        {
          "name": "instance",
          "type": "query",
          "query": "label_values(up{job=\"pynomaly-api\"}, instance)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        },
        {
          "name": "algorithm",
          "type": "query", 
          "query": "label_values(pynomaly_detections_total, algorithm)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "enable": true,
          "iconColor": "blue",
          "query": "ALERTS{alertname=\"PynomalyDeployment\"}",
          "textFormat": "{{.CommonAnnotations.summary}}"
        }
      ]
    }
  }
}