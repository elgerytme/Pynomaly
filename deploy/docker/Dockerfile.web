# Multi-stage Dockerfile for Pynomaly Web UI
FROM node:18-slim as frontend-builder

# Install frontend dependencies and build assets
WORKDIR /app/frontend
COPY src/pynomaly/presentation/web/static/package*.json ./
RUN npm ci --only=production

# Copy frontend source and build
COPY src/pynomaly/presentation/web/static/ ./
RUN npm run build

FROM python:3.12-slim as base

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1 \
    DEBIAN_FRONTEND=noninteractive

# Install system dependencies
RUN apt-get update \
    && apt-get install -y --no-install-recommends \
        build-essential \
        curl \
        git \
    && rm -rf /var/lib/apt/lists/*

# Create app user and directory
RUN useradd --create-home --shell /bin/bash app
WORKDIR /app

# Python build stage
FROM base as builder

# Install hatch for building
RUN pip install hatch

# Copy source code
COPY . .
RUN chown -R app:app /app

# Switch to app user
USER app

# Build the package
RUN hatch build

# Production stage
FROM base as production

# Install runtime dependencies only
RUN apt-get update \
    && apt-get install -y --no-install-recommends \
        curl \
        ca-certificates \
        nginx \
    && rm -rf /var/lib/apt/lists/*

# Copy built package from builder
COPY --from=builder /app/dist/*.whl /tmp/

# Install the package with web dependencies
RUN pip install /tmp/*.whl[api,server] \
    && rm -rf /tmp/*.whl

# Copy built frontend assets
COPY --from=frontend-builder /app/frontend/dist/ /app/static/

# Copy nginx configuration
COPY deploy/docker/config/nginx.conf /etc/nginx/nginx.conf

# Switch to app user for application
USER app

# Health check
HEALTHCHECK --interval=30s --timeout=30s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/ || exit 1

# Expose port
EXPOSE 8000

# Start both nginx and the Python app
CMD ["sh", "-c", "nginx && uvicorn pynomaly.presentation.web.app:create_web_app --host 0.0.0.0 --port 8000"]