  "shortcuts": [
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "View main anomaly detection dashboard",
      "url": "/dashboard",
      "icons": [
        {
          "src": "/static/icons/shortcut-dashboard.png",
          "type": "image/png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Real-time Monitor",
      "short_name": "Monitor",
      "description": "Real-time anomaly monitoring",
      "url": "/monitor",
      "icons": [
        {
          "src": "/static/icons/shortcut-monitor.png",
          "type": "image/png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Upload Dataset",
      "short_name": "Upload",
      "description": "Upload new dataset for analysis",
      "url": "/upload",
      "icons": [
        {
          "src": "/static/icons/shortcut-upload.png",
          "type": "image/png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Analytics",
      "short_name": "Analytics",
      "description": "Advanced analytics and reports",
      "url": "/analytics",
      "icons": [
        {
          "src": "/static/icons/shortcut-analytics.png",
          "type": "image/png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/api/share/dataset",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "dataset",
          "accept": [".csv", ".json", ".xlsx", ".parquet", "text/csv", "application/json", "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet"]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/open-dataset",
      "accept": {
        "text/csv": [".csv"],
        "application/json": [".json"],
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": [".xlsx"],
        "application/octet-stream": [".parquet"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+pynomaly",
      "url": "/protocol?action=%s"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 480
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "handle_links": "preferred",
  "prefer_related_applications": false,
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://pynomaly.app/manifest.json"
    }
  ],
  "features": [
    "cross-origin-isolated"
  ],
  "permissions": [
    "storage-access",
    "notifications",
    "background-sync",
    "push"
  ],
  "display_override": [
    "window-controls-overlay",
    "minimal-ui",
    "standalone",
    "browser"
  ]
}
