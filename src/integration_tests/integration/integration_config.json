{
  "test_environment": "integration",
  "parallel_execution": false,
  "verbose": true,
  "generate_reports": true,
  "cleanup_after_tests": true,
  "test_timeout": 300,
  "max_retries": 2,
  "fail_fast": false,
  "coverage_enabled": true,
  "performance_monitoring": true,
  "output_format": "json",
  "results_directory": "test-results/integration",
  "log_level": "INFO",
  
  "database": {
    "enabled": true,
    "url": "sqlite:///test_integration.db",
    "echo": false,
    "pool_size": 5,
    "max_overflow": 10
  },
  
  "cache": {
    "enabled": true,
    "type": "memory",
    "max_size": 1000,
    "ttl": 3600
  },
  
  "security": {
    "auth_enabled": false,
    "jwt_secret": "test_secret_key",
    "token_expiry": 3600,
    "rate_limiting": {
      "enabled": true,
      "requests_per_minute": 100
    }
  },
  
  "test_data": {
    "cleanup_after_test": true,
    "generate_realistic_data": true,
    "dataset_sizes": {
      "small": 100,
      "medium": 1000,
      "large": 10000
    },
    "anomaly_rates": {
      "low": 0.05,
      "medium": 0.1,
      "high": 0.2
    }
  },
  
  "performance": {
    "monitoring_enabled": true,
    "benchmark_thresholds": {
      "detection_time_ms": 5000,
      "api_response_time_ms": 1000,
      "memory_usage_mb": 512
    },
    "profiling_enabled": false
  },
  
  "external_services": {
    "mock_enabled": true,
    "timeout_seconds": 30,
    "retry_attempts": 3,
    "services": {
      "notification_service": {
        "enabled": true,
        "mock_responses": true
      },
      "cloud_storage": {
        "enabled": true,
        "mock_responses": true
      },
      "external_api": {
        "enabled": true,
        "mock_responses": true
      }
    }
  },
  
  "reporting": {
    "html_report": true,
    "json_report": true,
    "junit_xml": true,
    "coverage_report": true,
    "performance_report": true,
    "include_screenshots": false,
    "include_logs": true
  },
  
  "ci_cd": {
    "github_actions": {
      "enabled": true,
      "artifact_upload": true,
      "status_checks": true
    },
    "docker": {
      "enabled": true,
      "cleanup_containers": true,
      "network_isolation": true
    }
  },
  
  "debugging": {
    "debug_mode": false,
    "save_test_artifacts": true,
    "verbose_logging": true,
    "breakpoint_on_failure": false
  }
}