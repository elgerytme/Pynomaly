# Buck2 Build Configuration for Testing Package
# Shared testing utilities and frameworks in shared layer

load("//tools/buck:python.bzl", "monorepo_workspace_package")
load("//tools/buck:testing.bzl", "monorepo_comprehensive_tests")

# ==========================================
# Testing Package
# ==========================================

monorepo_workspace_package(
    name = "testing",
    layer = "shared",
    package_type = "testing",
    dependencies = [],
    visibility = ["PUBLIC"],
)

# ==========================================
# Test Suite
# ==========================================

monorepo_comprehensive_tests(
    package_name = "testing",
    deps = [],
    include_property = False,
    include_performance = False,
    include_security = False,
)